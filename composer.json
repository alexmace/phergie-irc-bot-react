{
    "name": "phergie/phergie-irc-bot-react",
    "description": "IRC bot built on React",
    "keywords": [ "irc", "bot", "react" ],
    "license": "BSD-2-Clause",
    "support": {
        "email": "team@phergie.org",
        "irc": "irc://irc.freenode.net/phergie",
        "issues": "https://github.com/phergie/phergie-irc-bot-react/issues",
        "source": "https://github.com/phergie/phergie-irc-bot-react"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.2",
        "phergie/phergie-slack-client-react": "dev-master",
        "phergie/phergie-slack-connection": "dev-master",
        "phergie/phergie-irc-event": "1.*",
        "evenement/evenement": "~2.0",
        "monolog/monolog": "~1.6"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/alexmace/phergie-slack-client-react"
        },
        {
            "type": "vcs",
            "url": "https://github.com/alexmace/phergie-slack-connection"
        },
        {
            "type": "vcs",
            "url": "https://github.com/phergie/phergie-irc-event"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "phake/phake": "2.0.0-beta2",
        "codeclimate/php-test-reporter": "~0.1",
        "satooshi/php-coveralls": "0.6.1"
    },
    "autoload": {
        "psr-4": {
            "Phergie\\Irc\\Bot\\React\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phergie\\Irc\\Tests\\Bot\\React\\": "tests"
        }
    },
    "bin": [
        "bin/phergie"
    ]
}
